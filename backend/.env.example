# 서버 설정
PORT=3001
NODE_ENV=development

# 데이터베이스
DATABASE_URL="postgresql://username:password@localhost:5432/hungarian_learning_db"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT 인증
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d

# Google Cloud Speech API
GOOGLE_CLOUD_PROJECT_ID=your_project_id
GOOGLE_APPLICATION_CREDENTIALS=./config/gcp-credentials.json

# 파일 업로드
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# 이메일 설정 (선택적)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# CORS 설정
FRONTEND_URL=http://localhost:3000

# NLP 서비스 URLs
HUNGARIAN_NLP_URL=http://localhost:8001
LANGUAGETOOL_URL=http://localhost:8010

# API Keys (외부 서비스용)
DEEPL_API_KEY=your-deepl-api-key
OPENAI_API_KEY=your-openai-api-key

# 기능 플래그
ENABLE_HUNGARIAN_NLP=true
ENABLE_LANGUAGETOOL=true
ENABLE_AI_SUGGESTIONS=true

# 로깅
LOG_LEVEL=debug

# 보안 설정
CORS_ORIGIN=http://localhost:3000,http://localhost:3700
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100